<%include ../../../core/front/templates.navbar.ejs%>

<br><br>
<div class="container" width="100%">
    <div class="row">
        <div class="col-sm-6">

            <% if (product.video && product.video.length > 0  ) { %>
            <iframe id="video" src="//player.vimeo.com/video/<%= product.video %>" width="100%" height="320"
                    frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>

            <% } %>

            <% if (product.idProduct){ %>
            <img src="/images/product/<%= product.idProduct %>/1.png" width="100%" id="thumbnail" class="thumbnail" style="width: 350px"/>
            <% } %>

            <% if (product.thumbnail){ %>

            <a href="<%= product.thumbnail %>"><img src="<%= product.thumbnail %>" width="100%" id="thumbnail"
                                                    class="thumbnail"/></a>
            <% } %>

            <% if (product.photos && product.thumbnail) { %>
            <div class="row">
                <div class="col-xs-4">
                    <img src="<%= product.thumbnail %>" alt="" class="thumbnail preview"/>
                </div>
            </div>
            <% } %>

            <% if ( product.photos) { %>

            <% if ( product.thumbnail){ %>
            <div class="col-xs-4">
                <img src="<%= product.thumbnail %>" alt="" class="thumbnail preview"/>
            </div>
            <% } %>

            <% } %>

            <!--% endfor %-->
        </div>

        <div class="col-sm-6">

            <% if (product.name) { %>

            <h4><%= product.name %>

                <% } %>

                <% if (product.stock) { %>

                <% if ( product.stock < 0) { %>

                <Span class="badge badge-success"> <%= __('In Stock') %> </span>
                        
                <% } %>

                <% if  ( product.stock > 0) { %>
                         <Span class="badge badge-success"> <%= __('Inventory') %>: <%= product.stock %> </span>
                        
                <% } %>

                <% if  ( product.stock == 0) { %>

                         <Span class="badge"> <%= __('Out of stock') %> </span>
                        
                <% } %>

                <% } %>

            </h4>
            <hr>

            <% if (product.price) { %>

            <h4><%= sails.config.project.currency.symbol %>  <%= product.price | 'currency' %></h4>

            <% } %>
            <hr>

            <div class="form-group form-inline">

                <Label for="quantity"> <%= __('Quantity') %>: </label>

                <select class="" name="quantity" id = "quantity-<%= product.id %>">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select>

                      
            </div>

            <% if ( product.id) { %>
                  
            <button data-id="<%= product.id %>" data-role="add"
                    class="btn btn-default btn"> <%= __('Add to Cart') %> </button>
                  
            <Button data-id="<%= product.id %>" data-role="buy"
                    class="btn btn-primary btn"> <%= __('Purchase') %> </button>

            <% } %>
            <hr>


            <h4><%= __('Description') %></h4>
            <% if ( product.description) { %>
            <p><%= product.description %></p>

            <% } %>
            <% if (product.tags) { %>
            <a href="/tag/<%= tag %>"><span class="badge badge-info"><%= tag %></span></a>
            <!-- <a href="#"><span class="badge badge-info"><%= tag %></span></a> -->
            <% } %>
        </div>

        <div class="col-sm-12">
            <div id="disqus_thread"></div>

        </div>
    </div>
</div><!-- /.container -->


<%- include ../../../core/commun/library.ejs %>

